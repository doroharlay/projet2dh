{% extends 'FrontBundle::base.html.twig' %}

{% block section %}

    {# S'il y a une erreur, on l'affiche dans cadre #}

    {% if error %}
        <div class="alert alert-error">{{ error.message }}</div>
    {% endif %}
        
        
    {# Le formulaire, avec URL de soumission vers la route «login_check » comme on l'a vu #}
        
    <form class="form-horizontal" action="{{ path('login_check') }}" method="post">
        <label for="username">Login :</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" /></br>

        <label class="control-label" for="password">Password :</label>
        <input class="form-control" type="password" id="password" name="_password" />
        <br />
        <input class="btn btn-default" type="submit" value="Sign in" />
    </form>
        
{% endblock %}
